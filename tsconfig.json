{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "noEmit": false,
    "jsx": "preserve",
    "target": "es6",
    "moduleResolution": "node",
    "typeRoots": [
      "**/node_modules/@types",
      "./types"
    ],
    "lib": [
      "dom",
      "es6",
      "es7",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false
  },
  "include":[
    "**/*.tsx",
    "**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**/*",
    "**/client/build/*",
    "**/client/public/*",
    "**/.storybook/*",
    "**/*.stories.js",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/gulpfile.js",
    "**/specs/**/*",
    "*.config.js"
  ]
}
